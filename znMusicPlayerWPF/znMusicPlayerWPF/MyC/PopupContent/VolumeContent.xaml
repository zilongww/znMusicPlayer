<UserControl xmlns:MyC="clr-namespace:znMusicPlayerWPF.MyC"  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  x:Class="znMusicPlayerWPF.MyC.PopupContent.VolumeContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:znMusicPlayerWPF.MyC.PopupContent"
             mc:Ignorable="d" Height="36" Width="122" MouseWheel="UserControl_MouseWheel">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Grid>
            <materialDesign:PackIcon x:Name="icons" Kind="VolumeMedium" Foreground="White" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <MyC:znButton x:Name="zb" Height="36" Width="36" Background="{x:Null}" BorderBrush="{x:Null}" Content="" Click="znButton_Click" IsAnimateCR="False"/>
        </Grid>
        <TextBlock x:Name="texts" Text="音量：静音" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Margin="2,0,4,0" Width="80"/>
    </StackPanel>
</UserControl>
