<UserControl x:Name="mainContent" x:Class="znMusicPlayerWPF.MyC.SimpleLoading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:znMusicPlayerWPF.MyC"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             mc:Ignorable="d" Foreground="#FF008EFF"
             d:DesignHeight="300" d:DesignWidth="300">
    <Viewbox>
        <Grid x:Name="grid" Width="10" Height="10" RenderTransformOrigin="0.5,0.5">
            <ed:Arc x:Name="arc" Stroke="{Binding ElementName=mainContent,Path=Foreground}" StrokeDashCap="Round"
                    StartAngle="0"
                    EndAngle="26"
                    Stretch="None"
                    StrokeDashArray="0"
            />
        </Grid>
    </Viewbox>
</UserControl>
