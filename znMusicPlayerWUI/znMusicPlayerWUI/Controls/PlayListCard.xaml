<Grid
    x:Class="znMusicPlayerWUI.Controls.PlayListCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:znMusicPlayerWUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:animations="using:CommunityToolkit.WinUI.UI.Animations"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="Transparent"
    Loaded="UILoaded" Unloaded="UIUnloaded"
    PointerEntered="Grid_PointerEntered" PointerExited="Grid_PointerExited"
    PointerPressed="Grid_PointerPressed" PointerReleased="Grid_PointerReleased"
    RightTapped="Grid_RightTapped" Holding="Grid_Holding" AccessKeyInvoked="Grid_AccessKeyInvoked">

    <Grid.Resources>
        <MenuFlyout x:Name="FlyoutMenu">
            <MenuFlyoutItem x:Name="EditPlayListButton" Icon="edit" Text="编辑" Click="EditPlayListButton_Click"/>
            <MenuFlyoutItem x:Name="RefreshPlayListButton" Icon="refresh" Text="更新" Click="MenuFlyoutItem_Click_1"/>
            <MenuFlyoutItem Text="删除" Click="MenuFlyoutItem_Click" Foreground="{ThemeResource SystemFillColorCriticalBrush}">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE74D;" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
    </Grid.Resources>
    
    <Rectangle x:Name="ShadowBaseRectangle" Margin="4,2,0,0"/>
    <Border CornerRadius="8"
            BorderThickness="1"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}">
        <Grid>
            <Rectangle x:Name="ABackColorBaseRectAngle" Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0"/>
            <Rectangle x:Name="BackColorBaseRectAngle" Fill="{ThemeResource LayerFillColorDefault}" Opacity="1"/>
            <Grid>
                <local:Imagezn x:Name="PlayListImage" Stretch="UniformToFill" ShowMenuBehavior="OnlyLightUp"
                               HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="6"/>
                <Grid IsHitTestVisible="False" VerticalAlignment="Bottom"
                      Background="{ThemeResource AcrylicNormal}">
                    <TextBlock x:Name="TextBaseTb" Padding="8,6" TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Bottom" HorizontalAlignment="Left">
                        <Run Text="{Binding ListShowName}"/><LineBreak/><Run Text="{Binding Songs.Count}" FontSize="12"/>首歌曲
                    </TextBlock>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Grid>
